<div>
  <h3>id: <%= @task.id %> のタスク編集ページ</h3>
</div>
<div class="col-sm-4">
  <%= form_with(model: @task, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.label :status, 'Status：' %>
      <%= f.select :status, [["Working", "Working"], ["Done", "Done"], ["Pending", "Pending"]],{} , {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :content, 'Content：' %>
      <%= f.text_area :content, class: 'form-control', rows: 1 %>
    </div>
    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  <% end %>
</div>
<div>
  <%= link_to '一覧に戻る', root_url %>
</div>
