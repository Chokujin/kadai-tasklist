<div class="row">
  <h3>id: <%= @task.id %> のタスク詳細ページ</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>Status</th>
          <th>Content</th>
          <th>Created_at</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

        <tbody>
          <tr>
            <td><%= @task.id %></td>
            <td><%= @task.status %></td>
            <td><%= @task.content %></td>
            <td><%= @task.created_at %></td>
            <td>
              <% if current_user == @task.user %>
                <%= link_to "Edit", edit_task_path(@task), class: 'btn btn-success btn-sm' %>
              <% end %>
            </td>
            <td>
              <% if current_user == @task.user %>
                <%= link_to "Delete", @task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </td>
          </tr>
        </tbody>
    </table>
  </div>
  <%= link_to '一覧に戻る', root_url %>
</div>