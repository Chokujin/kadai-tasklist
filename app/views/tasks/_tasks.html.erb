<% if @tasks.present? %>
<ul class="list-unstyled">
  <div>User: <%= current_user.name %></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Status</th>
        <th>Content</th>
        <th>Created_at</th>
      </tr>
    </thead>

    <% @tasks.each do |task| %>
      <tbody>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
          <td><%= task.created_at %></td>
        </tr>
      </tbody>
    <% end %>
  <%= paginate tasks %>
</ul>
<% end %>  
