<ul class="list-unstyled">
  <div>User: <%= current_user.name %></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Status</th>
        <th>Content</th>
        <th>Created_at</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <% tasks.each do |task| %>
    <tbody>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td>
          <% if current_user == task.user %>
            <%= link_to "Edit", edit_task_path(task), class: 'btn btn-success btn-sm' %>
          <% end %>
        </td>
        <td>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <%= paginate tasks %>
</ul>